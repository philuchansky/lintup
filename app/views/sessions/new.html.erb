<h1></h1>

<%= form_tag sessions_path,{:class => 'form-horizontal'} do %>
    <legend>Sign In:</legend>
    <fieldset>
	    <div class="form-group">
	        <%= label_tag :email, 'Email', class: 'col-lg-2 control-label' %>
		    <div class="col-lg-5">
		        <%= text_field_tag :email, params[:email], class: 'form-control' %>
		    </div>
	    </div>
	    <div class="form-group">
	        <%= label_tag :password, 'Password', class: 'col-lg-2 control-label' %>
		    <div class="col-lg-5">
		        <%= password_field_tag :password, nil, class: 'form-control' %>
		    </div>
	    </div>
	    <div class="form-group">
	        <div class="col-lg-10 col-lg-offset-2">
	            <%= submit_tag 'Log in', class: 'btn btn-primary' %>
		        <%= link_to "Don't have an account?", new_user_path, class: 'btn btn-info' %>
	        </div>
	    </div>


    </fieldset>
<% end %>
